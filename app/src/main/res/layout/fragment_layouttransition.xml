<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/vibrant_rgb"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/container"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark_muted_rgb"
        android:padding="30dp">
        <com.luciofm.presentation.droiconit.widget.TextView
            android:text="LayoutTransition"
            android:textSize="@dimen/text_title_really_big"
            android:textColor="@color/white_almost_opaque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/title"
            app:typeFace="YanoneKaffeesatz-Regular.ttf"/>
        <TextSwitcher
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textSwitcher"
            android:visibility="gone">
            <com.luciofm.presentation.droiconit.widget.TextView
                android:text="android:animateLayoutChanges=false"
                android:textSize="@dimen/text_title_very_small"
                android:textColor="@color/white_almost_opaque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="monospace" />
            <com.luciofm.presentation.droiconit.widget.TextView
                android:text="android:animateLayoutChanges=true"
                android:textSize="@dimen/text_title_very_small"
                android:textColor="@color/white_almost_opaque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:typeface="monospace" />
        </TextSwitcher>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/container2"
        android:gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/container3"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="@dimen/text_title_very_small"
                android:textColor="@color/vibrant_title"
                android:background="@drawable/border"
                android:text="Item A"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:textSize="@dimen/text_title_very_small"
                android:background="@drawable/border"
                android:textColor="@color/vibrant_title"
                android:text="Item B"/>
        </LinearLayout>

        <Space
            android:layout_width="80dp"
            android:layout_height="match_parent" />

        <com.luciofm.presentation.droiconit.widget.SquareGridLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/container4"
            app:numColumns="2">
            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:textSize="@dimen/text_title_very_small"
                android:textColor="@color/vibrant_title"
                android:background="@drawable/border"
                android:text="Item A"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:textSize="@dimen/text_title_very_small"
                android:textColor="@color/vibrant_title"
                android:background="@drawable/border"
                android:text="Item B"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:textSize="@dimen/text_title_very_small"
                android:textColor="@color/vibrant_title"
                android:background="@drawable/border"
                android:text="Item C"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:textSize="@dimen/text_title_very_small"
                android:textColor="@color/vibrant_title"
                android:background="@drawable/border"
                android:text="Item D"/>

        </com.luciofm.presentation.droiconit.widget.SquareGridLayout>

    </LinearLayout>
</LinearLayout>
